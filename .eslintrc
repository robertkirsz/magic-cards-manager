{
  "parser": "babel-eslint",
  "extends": [
    "standard",
    "standard-react"
  ],
  "plugins": [
    "babel",
    "react",
    "promise"
  ],
  "env": {
    "browser" : true
  },
  "globals": {
    "__DEV__"      : false,
    "__TEST__"     : false,
    "__PROD__"     : false,
    "__COVERAGE__" : false
  },
  "rules": {
    "key-spacing"          : 0,
    "jsx-quotes"           : [1, "prefer-double"],
    "max-len"              : [2, 120, 2],
    "object-curly-spacing" : [2, "always"],
    "no-multi-spaces"      : [1, { exceptions: { "ImportDeclaration": true, "VariableDeclarator": true } }],
    curly: [1, "multi", "consistent"]
  }
}
